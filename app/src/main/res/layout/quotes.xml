<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute_title"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute1"
                android:id="@+id/textView1"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute2"
                android:id="@+id/textView2"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute3"
                android:id="@+id/textView3"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute4"
                android:id="@+id/textView4"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute5"
                android:id="@+id/textView5"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute6"
                android:id="@+id/textView6"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/qoute7"
                android:id="@+id/textView7"
                android:layout_weight="0.06" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>